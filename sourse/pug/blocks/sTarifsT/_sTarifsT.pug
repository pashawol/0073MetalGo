mixin sTarifsTImgBnaer()
	+b.img-baner.active
		+e.row.row.align-items-center
			.col-auto.d-none.d-lg-block
				+e.img
					img(loading="lazy" src="img/svg/img-baner.svg" alt="")
			.col
				+e.title-row.row.align-items-center
					.col-auto.d-lg-none
						+e.img
							img(loading="lazy" src="img/svg/img-baner.svg" alt="")
					+e.title.col Рекламный баннер
				+e.descr Размещение на всех страницах сайта компьютерной версии сбоку и внизу.
			+e.per-month.col-lg-auto 3 000 ₽/мес.
			.col-lg-auto
				+e.btn(href="#")
					span Подробнее
					+icon('chevron-down2')
		+e.img-baner-body
			+pic("sImged-1.png")
mixin tarifBuyerItem(data)
	+b.t-buyer
		+e.title=data.title
		+e.price=data.price
		+e.per-month=data.perMonth
		+e.btn(href="#") Подключить

mixin tarifAddServ(data)
	+b.add-serv
		+e.row.row
			.col-auto.d-none.d-md-block
				+e.img
					img(loading="lazy" src=`img/svg/add-serv-${data.imgNum}.svg` alt="")
			.col
				+e.title-row.row.align-items-center
					.col-auto.d-md-none
						+e.img
							img(loading="lazy" src=`img/svg/add-serv-${data.imgNum}.svg` alt="")
					.col
						+e.title=data.title
				+e.descr=data.descr
				+e.price=data.price
				+e.a-row.row.align-items-center
					+e.a-txt.col-auto Количество:
					.col-auto
						+e.inp-group.input-group
							+e.sm-btn--min(type="button")
							+e.INPUT.input.form-control(type="text" value="1")
							+e.sm-btn--plus(type="button")
					.col-sm-auto=data.hasTxt
				+e.btns-row.row
					.col-sm-6
						+e.btn--orange(type="button") Оплатить
					.col-sm-6
						+e.btn--out-orange(type="button") Как это работает?