			+g.sSearch
				+e.baner.d-none.d-xl-block
					img(loading="lazy" src="img/@2x/sSearch-baner2.png" alt="")
	// end sAds

mixin orderBlItem(title)
	+e.item
		+e.title=title
		+e.content
			block
mixin sAdsItem(title, val, hiiden)
	+e.item
		+e.i-row.row
			+e.i-title.col-md-6=title
			if hiiden
				+e.i-val.col-md-6.ps-xl-0
					+b.hid-alert Информация скрыта
			else
				if block
					+e.i-val.col-md-6.ps-xl-0
						block
				else
					+e.i-val.col-md-6.ps-xl-0=val

mixin contactsBox(data)
	.t-box.t-box--c-box
		.t-box__header
			h4.t-box__title.t-box__title--h4=data.title
		.t-box__content
			+b.c-box
				+e.item
					+e.top-row.row.gy-20(class=`${!data.hidden ? 'align-items-center' : ''}`)
						.col-auto
							if data.logo
								+e.logo(href="#" target="_blank")
									img(loading="lazy" src="img/svg/big-logo.svg" alt="")
							if data.hidden
								+e.l-hidden Организация
						.col
							if data.name
								+e.name=data.name
							if data.hidden
								+b.hid-alert.mb-1 Информация скрыта
							+e.fb-row.row.align-items-center
								.col-auto
									+g.s-item
										+e.rate
											+e.star
												img(loading="lazy" src="img/svg/star.svg" alt="")
											+e.rate-val 4.9
								.col-auto
									+e.fb-amount 6 отзывов
				+contactsBoxItem('Город')
					if data.city
						+e.txt-item=data.city
					if data.hidden
						+b.hid-alert Информация скрыта
				+contactsBoxItem('Телефон')
					if data.tell
						+e.txt-item(href=`tel:${data.telHref}`)=data.tell
					if data.hidden
						+b.hid-alert Информация скрыта
				+contactsBoxItem('E-mail')
					if data.email
						+e.txt-item--gray(href=`mailto:${data.email}`)=data.email
					if data.hidden
						+b.hid-alert Информация скрыта
				+contactsBoxItem('Сайт')
					if data.cite
						+e.txt-item--gray(href=data.cite target="_blank")=data.cite
					if data.hidden
						+b.hid-alert Информация скрыта
				+contactsBoxItem('ИНН')
					if data.inn
						+e.sub-row.row.align-items-center
							.col-auto
								+e.inn(href="#") 546458776976
							.col-auto
								+b.btn-sbis(href="#")
									img(loading="lazy" src="img/svg/sbis.svg" alt="")
					if data.hidden
						+b.hid-alert Информация скрыта
				+e.item
					if data.hidden
						+e.alert.alert.alert-primary Авторизуйтесь, чтобы увидеть контактную информацию.
					+e.btns-box
						+g.s-item
							+e.btn--out-light(href="#")
								+e.b-icon
									img(loading="lazy" src="img/svg/send-pr.svg" alt="")
								span Написать
							if data.feedback
								+e.btn--out-light(href="#")
									+e.b-icon
										img(loading="lazy" src="img/svg/star-pr.svg" alt="")
									span Оставить отзыв
					if data.feedback
						.text-center
							+e.complain(href="#") Пожаловаться на пользователя


mixin contactsBoxItem(title)
	+e.item
		+e.i-row.row.align-items-center
			+e.title.col-auto=title
			.col
				block