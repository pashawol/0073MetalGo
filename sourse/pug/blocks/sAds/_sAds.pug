			+e.row.row.gy-20
				.col
					+titleBox({
						title: data.title,
						placed: true,
					})
						if data.isAds
							+b.ads-bl
								+e.items
									+sAdsItem('Наименование:', 'Арматура')
									+sAdsItem('Цена (с НДС):', '324 000 ₽')
									+sAdsItem('Вес:', '34,7 тн')
									+sAdsItem('Марка:', '03Х21Н21М4ГБ')
