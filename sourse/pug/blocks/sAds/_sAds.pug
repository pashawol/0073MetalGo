									+sAdsItem('Толщина стенки:', '18 мм')
									+sAdsItem('Стандарт:', 'ГОСТ 8732-78 ')
									+sAdsItem('Склад:', 'Челябинск, улица Шоссе Металлургов 31Б', data.hidden)
