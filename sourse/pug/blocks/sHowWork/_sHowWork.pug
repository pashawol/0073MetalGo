mixin sHowWork(data)
	// start sHowWork
	+b.SECTION.sHowWork.section#sHowWork&attributes(attributes)
		.container
			+b.section-title--big.text-center
				h2 как это работает
			+e.row.row
				+sHowWorkItem(1, 'Заполняете форму – указываете позиции металла и контактные данные')
				+sHowWorkItem(2, 'Наш менеджер обрабатывает запрос и отправляет вам информацию')
				+sHowWorkItem(3, 'В случае положительного решения оформляется договор и спецификация')
