mixin sHowWorkItem(imgNum, txt)
	.col-sm-6.col-lg-3
		+e.item.text-center
			+e.img
				img(loading="lazy" src=`img/svg/sHowWork-${imgNum}.svg` alt="")
			+e.txt=txt