mixin headerBlock()
	// start headerBlock
	+b.headerBlock.section#headerBlock&attributes(attributes)
		+e.container.container
			+e.slider-wrap
				.swiper-container.headerBlock-slide-js
					.swiper-wrapper
						+headerBlockSlide(4)
						+headerBlockSlide(1)
						+headerBlockSlide(2)
						+headerBlockSlide(3)
						//- -for(var i = 1; i <= 3; i++)
						//- 	+headerBlockSlide(i)
					.swiper-pagination
			//-+pic('headerBlock-1.png')
	// end headerBlock

mixin headerBlockSlide(imgNum)
	.swiper-slide
		+e.PICTURE.img
			//- source(srcset=`img/@2x/webp/headerBlock-${imgNum}.webp` type=`image/webp`  media="(min-width:480px)")
			source(srcset=`img/banner/headerBlock-${imgNum}.png` type=`image/png`   media="(min-width:481px)")
			//- source(srcset=`img/@2x/webp/headerBlock-mob-${imgNum}.webp` type=`image/webp`  )
			//-source(srcset=`img/@2x/headerBlock-mob-${imgNum}.png`  media="(max-width:576px)")
			img(loading="lazy" src=`img/banner/headerBlock-mob-${imgNum}.png` alt="")