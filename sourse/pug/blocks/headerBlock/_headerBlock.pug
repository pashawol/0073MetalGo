mixin headerBlock()
	// start headerBlock
	+b.headerBlock.section#headerBlock&attributes(attributes)
		+e.container.container
			+e.slider-wrap
				.swiper-container.headerBlock-slide-js
					.swiper-wrapper
						-for(var i = 1; i <= 4; i++)
							+headerBlockSlide(i)
					.swiper-pagination
			//-+pic('headerBlock-1.png')
	// end headerBlock

mixin headerBlockSlide(imgNum)
	.swiper-slide
		+e.PICTURE.img
			source(srcset=`img/@2x/webp/headerBlock-${imgNum}.webp` type=`image/webp`  media="(min-width:480px)")
			source(srcset=`img/@2x/headerBlock-${imgNum}.png` type=`image/png`   media="(min-width:480px)")
			source(srcset=`img/@2x/webp/headerBlock-mob-${imgNum}.webp` type=`image/webp`  )
			//-source(srcset=`img/@2x/headerBlock-mob-${imgNum}.jpg`  media="(max-width:576px)")
			img(loading="lazy" src=`img/@2x/headerBlock-mob-${imgNum}.jpg` alt="")