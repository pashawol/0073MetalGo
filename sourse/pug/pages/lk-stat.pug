extends layout/main.pug

include ../blocks/sContent/_sContent.pug
include ../blocks/sContact/_sContact.pug
include ../blocks/sSearch/_sSearch.pug
include ../blocks/sAds/_sAds.pug
include ../blocks/sProfileS/_sProfileS.pug
include ../blocks/sTarif/_sTarif.pug
include ../blocks/sTarifsT/_sTarifsT.pug
include ../blocks/sStat/_sStat.pug

block variables
	- let  mainPage= null
	- let  bg='14.png'

block title
	- let  title= '14-stat'
	title= title
block pagecontent
	+mob-mnu()
	+header()
		+top-nav()
	// tabs wrap required for js work only if u remove js, remove this wrap
	.tabs
		+b.white-line--pad-alt3.bg-white.pb-0.p-xl-0
			.container
				+e.row--pad-alt.row.align-items-center.pb-0
					//-+e.title-col
					+e.title-col.col.col-xl-auto
						+e.H1.title Личный кабинет
					.col-xl.order-last.order-xl-0
						+e.tabs-btn-row--alt.row
							+tabsBtn2('user', 'Пользователь')
							+tabsBtn2('users', 'Организация')
							+tabsBtn2('warehouse', 'Склад')
							+tabsBtn2('list', 'Объявления')
							+tabsBtn2('', 'Сообщения', '')(class="d-none d-md-block")
							+tabsBtn2('tarifs', 'Тарифы')
							+tabsBtn2('stat', 'Статистика', 'active')
					.col-auto
						+e.balance-row.row.align-items-center
							.col-auto.d-none.d-sm-block Баланс: 0₽
							.col-auto
								+e.bal-btn(href="#")
									span.d-none.d-sm-inline Пополнить
									span.d-sm-none Баланс: 0₽
		+sStat()
	+footer()